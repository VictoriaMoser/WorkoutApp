= simple_form_for(@workout, html: { class: 'form-horizontal'}) do |f|
  = f.input :date, label: "Date", input_html: {class: "form-control"}
  = f.input :workout, label: " What area did you workout? ", input_html: {class:"form-control"}
  = f.input :mood, label: " How do you feel? ", input_html: {class: "form-control"}
  = f.input :length, label: " How long was your workout? ", input_html: {class: "form-control"}
  %br/
  = f.button :submit
